{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",

    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:dev": "npm run lint:fix && cp .env.dev .env && npm run build && firebase deploy --project=flezta --only functions",
    "deploy:prod": "npm run lint:fix && cp .env.prod .env && npm run build && firebase deploy --project=flezta-prod --only functions",
    "logs": "firebase functions:log",
    "upload:test": "npx ts-node scripts/uploadTestFile.ts"
  },
  "engines": {
    "node": "24"
  },
  "main": "lib/index.js",
  "dependencies": {
    "dotenv": "^17.3.1",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0",
    "mongoose": "^9.1.6",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.4.1",
    "typescript": "^5.1.6"
  },
  "private": true
}
